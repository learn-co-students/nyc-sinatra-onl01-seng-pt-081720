
<h1>Add a New Figure:</h1>
<form action="/figures" method="POST">
    <h3>Name</h3>
    <input type="text" name="figure[name]" id="figure_name">
    <br><br>
    <h3>Title</h3>
    <br>
    <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"> <%=title.name%> <br><br>
    <%end%>

    <h3>Create New Title:</h3>
    <input type="text" name="title[name]" id="new_title">
    <br>

    <h3>Landmarks</h3>
    <br>
    <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"> <%= landmark.name%> <br>
    <%end%>
    <br>
    <h3>Create New Landmark:</h3>
    <h4>Name:</h4>
    <input type="text" name="landmark[name]" id="new_landmark">
    <input type="submit" name="Create New Figure">


</form>