<h1>Create A New Figure</h1>
<br>
<form method="POST" action="/figures">
    <h3><label for="figure_name">Name</label>
    <input type="text" name="figure[name]" id="figure_name"></h3><br>
    <h2>Titles:</h2>
    
    <h4>
        <% @titles.each do |title| %>
            <label for="title_<%= title.id %>"><%= title.name %></label>
            <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>">
            <br>
        <% end %>
    </h4>
    <h2>Create New Title:</h2>
    <h3><input type="text" name="title[name]" id="new_title"></h3>
    <br>
    <h2>Landmarks:</h2>
    <h3>
        <% @landmarks.each do |landmark| %>
            <label for="landmark_<%= landmark.id %>"><%= landmark.name %></label>
            <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>">
            <br>
        <% end %>
    </h3>
    <br>
    <h2>Create New Landmark:</h2>
    <h3>
        <label for="new_landmark">Name</label>
        <input type="text" name="landmark[name]" id="new_landmark">
        <input type="submit" id="create_new_figure" value="Create New Figure">
    </h3>
</form>
<br>
<br>
