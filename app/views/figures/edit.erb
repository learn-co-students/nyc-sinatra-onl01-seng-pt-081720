<h1>Edit Figure</h1>
<form method="POST" action="/figures/<%= @figure.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name </label>
<input type="text" name="figure[name]" id="figure_name"><br>

<h3><label>Titles</label></h3>
<% @titles.each do |title| %>
<%= title.name %> <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>"> <br>
<% end %>

<h3><label>Create New Title:</label></h3>
<input type="text" name="title[name]" id="new_title">

<h3><label>Landmarks</label></h3>
<% @landmarks.each do |landmark| %>
<%= landmark.name %> <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>"> <br>
<% end %>

<h3><label>Create New Landmark:</label></h3>
<label>Name: </label>
<input type="text" name="landmark[name]" id="new_landmark">
<label>Year: </label>
<input type="text" name="landmark[year]">

<input type="submit" value="Create New Figure">
</form>